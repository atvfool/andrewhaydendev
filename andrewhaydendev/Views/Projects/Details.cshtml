@model andrewhaydendev.Models.ProjectModel

@{
    ViewData["Title"] = "Project Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Project Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <img class="ProjectLogoDetail" src="@Html.ValueFor(model => model.ImageURL)" />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RepositoryLink)
        </dt>
        <dd class="col-sm-10">
            <a class="fab fa-github-alt fa-align-center" href="@Html.ValueFor(model => model.RepositoryLink)" target="_blank"></a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompiledProjectLink)
        </dt>
        <dd class="col-sm-10">
            <a class="fas fa-file-download" href="@Html.ValueFor(model => model.CompiledProjectLink)" target="_blank"></a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActiveDevelopment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActiveDevelopment)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
